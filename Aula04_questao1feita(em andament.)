//Faça um programa que calcule o salário de um funcionário com base
//no valor da hora trabalhada de R$ 15.00 e na quantidade de
//40 horas trabalhadas e exiba o salário.

import java.util.Scanner;
public class MainSalario {
        public static void main(String[] args) {

        Scanner sc = new Scanner (System.in);
        Funcionario f = new Funcionario();

        System.out.print(" Digite o valor da hora trabalhada: R$ ");
        f.setValorhora (sc.nextDouble());

        System.out.print(" Digite a quantidade de horas trabalhadas: ");
        f. setHorasTrabalhadas (sc.nextInt());

        f. calcularSalario();

        System.out.print ("O valor da hora: "+ f.getValorHora()+ " R$,
                          trabalhando "+ f.getHorasTrabalhadas()+ "horas");
    }

}
