import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        String r;
        Scanner scanner = new Scanner(System.in);



        do {
            System.out.print("Digite uma nota no aluno: ");
            double matricula = scanner.nextDouble();
            scanner.nextLine();

            System.out.println("\nPara inserir uma outra nota, digite 'S' ou 'N' para não inserir ");
            r = scanner.nextLine();

        } while (r.equalsIgnoreCase("S"));

        scanner.close();
    }
